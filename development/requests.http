{
  "properties": {
    "dashboard": {
      "apps": {
        "availableTiles": [
          {
            "type": "USER_LAST_ACTION_TILE",
            "displayed": false
          }
        ],
        "lastUserAction": {
          "interval": "1H",
          "filterType": "ALL"
        }
      }
    }
  }
}

